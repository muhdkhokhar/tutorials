<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	<import resource="classpath:spring-config.xml" />
	<context:component-scan base-package="primefaces.beans"></context:component-scan>

	<bean id="facadeMonitoringAdvisor" class="net.bull.javamelody.MonitoringSpringAdvisor">
                <property name="pointcut">
                        <bean class="net.bull.javamelody.MonitoredWithInterfacePointcut">
                                <property name="interfaceName" value="springjooq.dao.IGenericService" />
                        </bean>
                </property>
        </bean>


</beans>
